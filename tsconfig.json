{
    "compilerOptions": {
      "lib": ["es2022"],
      "target": "es2022",
      "module": "commonjs",
      "outDir": "build",
      "rootDir": "src",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "sourceMap": true
    },
    "include": ["src/**/*.ts"]
  }
  